\newcommand{\mysectionpage}{
    \begingroup
    \setbeamertemplate{background}{
        \begin{tikzpicture}                                         %edit this tikzpicture to customize the size and colors of the background rectangles
            \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
            \fill[color=white] (0,0) rectangle(\the\paperwidth,\the\paperheight);     
        \end{tikzpicture}
    }
    \setbeamercolor{section page}{fg=GOE}
    \setbeamertemplate{section page}{
    \begin{tikzpicture}                                             %edit this tikzpicture to customize the appearance of the section heading
        \node[overlay,right] at (2.81,0) {\huge \insertsectionhead};
        \draw[overlay,line width=0.5mm,color=LLG] (3,-1) -- (11,-1);
        \draw[overlay,line width=0.5mm] (3,-1) -- (3+8*\insertframenumber/\inserttotalframenumber,-1);
    \end{tikzpicture}
    }
    %\frame[plain,noframenumbering]{\sectionpage}
    \frame[plain]{\sectionpage}
    \addtocounter{framenumber}{-1} 
    \endgroup
    
}

